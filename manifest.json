{
    "manifest_version": 3,
    "name": "Twitter Simple History",
    "version": "1.2",
    "description": "Simple extension that tracks and saves the history of tweets you've clicked on for revisiting",
    "host_permissions": [
        "https://x.com/*"
      ],
    "permissions": [
      "tabs",
      "webNavigation",
      "scripting",
      "history",
      "activeTab",
      "storage"
    ],
    "content_scripts": [
      {
        
        "matches": ["https://x.com/*", "https://www.x.com/*", 
                    "https://*.x.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"],
        "run_at": "document_idle"
      }
    ],
    "background": {
        "service_worker": "background.js"
      },
    "icons": {
        "16": "icons/e1.png",
        "48": "icons/e1.png",
        "128": "icons/e1.png"
    }
}